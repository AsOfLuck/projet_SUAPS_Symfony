        <title>{% block title %}Welcome!{% endblock %}</title>

        <!-- responsive -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- jQuery -->
        <script src="{{ asset('javascript/jquery.js') }}"></script>

